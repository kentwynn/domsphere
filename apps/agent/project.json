{
  "name": "agent",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/agent",
  "projectType": "application",
  "targets": {
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/agent",
        "command": "PYTHONPATH=../../packages:$PYTHONPATH ../../.venv/bin/python -m uvicorn main:app --host 0.0.0.0 --port 5001 --reload --loop asyncio"
      },
      "configurations": {
        "local": { "env": { "BUILD_ENV": "local" } },
        "dev": { "env": { "BUILD_ENV": "dev" } },
        "qa": { "env": { "BUILD_ENV": "qa" } },
        "prod": { "env": { "BUILD_ENV": "prod" } }
      }
    }
  }
}
