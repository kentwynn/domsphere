{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "../../dist/out-tsc",

    "declaration": true,
    "declarationMap": true,
    "declarationDir": "../../dist/out-tsc/packages/api-client",

    "composite": true
