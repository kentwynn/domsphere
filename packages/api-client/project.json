{
  "name": "api-client",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/api-client/src",
  "projectType": "library",
  "targets": {
    "codegen": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/api-client",
        "command": "npx openapi-typescript http://localhost:4000/openapi.json -o src/gen/schema.ts --export-type"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/api-client",
        "command": "tsc -p tsconfig.json"
      }
    }
  }
}
