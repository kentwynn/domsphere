{
  "name": "api-client",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/api-client/src",
  "projectType": "library",
  "targets": {
    "codegen": {
      "executor": "nx:run-commands",
      "options": {
        "command": "openapi-typescript http://localhost:4000/openapi.json -o packages/api-client/src/schema.ts"
      }
    },
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/api-client",
        "main": "packages/api-client/src/index.ts",
        "tsConfig": "packages/api-client/tsconfig.lib.json"
      }
    }
  }
}
