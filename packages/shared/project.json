{
  "name": "shared",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/shared/src",
  "projectType": "library",
  "release": {
    "version": {
      "manifestRootsToUpdate": ["dist/{projectRoot}"],
      "currentVersionResolver": "git-tag",
      "fallbackCurrentVersionResolver": "disk"
    }
  },
  "tags": [],
  "targets": {
    "contracts:json": {
      "executor": "nx:run-commands",
      "options": {
        "command": "ts-node packages/shared/scripts/gen-json-schema.ts"
      }
    },
    "contracts:py": {
      "executor": "nx:run-commands",
      "options": {
        "command": "datamodel-codegen --input contracts/contracts.schema.json --input-file-type jsonschema --output apps/api/api/models/contracts.py --target-python-version 3.10 --output-model-type pydantic_v2.BaseModel --field-constraints --reuse-model"
      }
    },
    "contracts": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx run shared:contracts:json",
          "nx run shared:contracts:py"
        ],
        "parallel": false
      }
    },
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/shared",
        "main": "packages/shared/src/index.ts",
        "tsConfig": "packages/shared/tsconfig.lib.json",
        "assets": ["packages/shared/*.md"]
      }
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/{projectRoot}"
      }
    }
  }
}
